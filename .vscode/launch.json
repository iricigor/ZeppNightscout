{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start Simulator (F5)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/scripts/start-simulator.js",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Server running at: (https?://[^\\s]+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/tests/test-parser.js",
            "console": "integratedTerminal"
        }
    ]
}
